        crossorigin="anonymous"></script>
    <script src="/assets/js/jQuery.js"></script>
    <script type="text/javascript">

        function reloadToken() {
            let u = $("#userToken").val();
            $(location).attr('href', '/?u=' + u)
        }

        function createTask() {
            let u = $("#userToken").val();
            $.post('/createTask',{token: u})
                .done((data) => {
                    $(location).attr('href', '/?u=' + u)
                })
        }

        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
        
    </script>
</head>

<body>

    <!--tutaj kontrolki do ręcznego wczytania tokena, wyświetlenie tokena itp-->
    <nav class="navbar navbar-inverse navbar-fixed-top" style="height:50px">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">#ToDo v0.0.3</a>
            </div>
            <form class="form-inline" style="margin-top:10px;float: right;">
                <input type="text" class="form-control mb-2 mr-sm-2" style="width:500px" id="userToken"
                    value="<%= token %>">
                <button type="button" onclick="reloadToken()" class="btn btn-primary mb-2">Załaduj</button>
            </form>
        </div>
    </nav>

    <main role="main" class="container" style="margin-top:70px">
        <!--tutaj faktyczna aplikacja, single-page, jakiś modal do dodawania zadań-->

        <div class="text-left">
            <a href="" class="btn btn-primary mb-2" data-toggle="modal" data-target="#modalForm" style="margin: 15px;">Dodaj zadanie</a>
        </div>

        <div class="container">
            <div class="list-group" id="tasks">

                <% for(let task of data.data) { %>
                <li class="list-group-item" style="padding-bottom: 20px;">
                    <label class="container2">
                        <input type="checkbox">
                        <span class="checkmark"></span>
                    </label>
                    <span class="title"><%= task %><span>
                    <button class="btn taskTrash"><i class="fa fa-trash"></i></button>
                </li>
                <% } %>
              
                <div class="modal fade" id="modalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header text-center">
                                <h4 class="modal-title w-100 font-weight-bold">Nowe zadanie</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body mx-3">

                                <div class="md-form mb-5">
                                    <i class="fa fa-hashtag"></i>
                                    <label data-error="wrong" data-success="right" for="form32">Tytuł</label>
                                    <input type="text" id="form32" class="form-control validate">
                                </div>

                                <div class="md-form mb-5 formElement">
                                    <i class="fa fa-exclamation"></i>
                                    <label data-error="wrong" data-success="right" for="formPriority">Priorytet</label>
                                    <select class="form-control" id="formPriority">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                      </select>
                                </div>

                                <div class="form-group formElement">
                                    <div class='input-group date' id='datetimepicker1'>
                                        <i class="fa fa-calendar-plus-o"></i>
                                        <label>Termin</label>
                                        <input type='text' class="form-control" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                                <!--script type="text/javascript">
                                    $(function () {
                                        $('#datetimepicker1').datetimepicker();
                                    });
                                </script-->

                                <div class="md-form">
                                    <i class="fa fa-edit"></i>
                                    <label data-error="wrong" data-success="right" for="form8">Treść zadania</label>
                                    <textarea type="text" id="form8" class="md-textarea form-control" rows="4"></textarea>
                                </div>

                            </div>
                            <div class="modal-footer d-flex justify-content-center">
                                <button class="btn btn-primary mb-2" onclick="createTask()">Zatwierdź <i class="fa fa-check"></i></button>
                            </div>
                        </div>
                    </div>
                </div>

        </div>
    </main>

</body>

